      "description": "Return the string of CPU architecture",
      "fullName": "CPU Architecture",
      "functionType": "StringExpression",
      "group": "CPU",
      "name": "CPU_Architecture",
      "sentence": "",
      "events": [
        {
          "type": "BuiltinCommonInstructions::JsCode",
          "inlineCode": [
            "try { const os = require(\"os\");",
            "",
            "runtimeScene.getVariablesForExtension(\"hardware_info\").get(\"CPU_arch\").setString(os.arch())",
            "",
            "}",
            "",
            "catch (Error) {",
            "    console.error(\"Sorry, This extension is not supported for mobile, browser\");",
            "}"
